extends layout

block content
  h1= title
  form(method='POST' action='')
    div.form-group
      label(for='name') Computer Parts Name:
      input#name.form-control(type='text' placeholder='Computer Parts Name' name='name' required='true')
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='textarea', placeholder='Description' name='description' value=(undefined===computerpart ? '' : computerpart.Description) required='true')

    button.btn.btn-primary(type='submit') Submit